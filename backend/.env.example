# ==========================================
# SHARED DATABASE (Neon PostgreSQL)
# ==========================================
# ⚠️ Request credentials from team lead
# Never commit actual values to Git!
#
# IMPORTANT: Use the DIRECT endpoint (without -pooler) for migrations
# Example: ep-xxxxx.c-2.eu-central-1.aws.neon.tech (NOT ep-xxxxx-pooler.c-2...)
# The pooler uses transaction mode which conflicts with Laravel migrations

DB_CONNECTION=pgsql
DB_HOST=ASK_TEAM_LEAD
DB_PORT=5432
DB_DATABASE=neondb
DB_USERNAME=neondb_owner
DB_PASSWORD=ASK_TEAM_LEAD
DB_SSLMODE=prefer

